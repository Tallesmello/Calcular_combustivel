<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccenters"

    tools:context=".HospedagemActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/calcular_hospedagem"
        android:textColor="@color/tamires"
        android:textSize="25sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/tamires"/>

    <ImageView
        android:layout_width="122dp"
        android:layout_height="101dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_calculate_24" />

    <!--    EditText "Local"  -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/local"
        android:textColorHint="@color/tamires"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccenters"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>
    <!--    FIM   -->

    <!--    EditText "Valor diaria"  -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="@string/valor_da_di_ria"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="@color/tamires">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editDiaria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccenters"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>
    <!--    FIM   -->

    <!--    EditText "Quatidade de Diarias"  -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="@string/quantidade_de_diarias"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="@color/tamires">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editQDiaria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccenters"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>
    <!--    FIM   -->

    <!--    EditText "EMAIL"  -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/data_entrada"
        android:textColorHint="@color/tamires"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccenters"
            android:inputType="date|textCapSentences|textAutoCorrect" />
    </com.google.android.material.textfield.TextInputLayout>
    <!--    FIM   -->

    <!--    TextView  -->
    <TextView
        android:id="@+id/totalResultadoHotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_margin="40dp"
        android:gravity="center"
        android:text="@string/resultadoTotal"
        android:textColor="@color/tamires"
        android:textSize="40sp" />

    <!--    FIM   -->

    <!--  Botão Calcular  -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCalcularHotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ripper"
        android:textSize="20sp"
        android:text="@string/calcular"
        android:textColor="@color/tamires"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"/>
    <!--  FIM  -->

    <!--  Botão validar email, senha e muda activity  -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/finalizarHospedagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ripper"
        android:textSize="20sp"
        android:text="@string/finalizar"
        android:textColor="@color/tamires"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"/>
    <!--  FIM  -->

</LinearLayout>